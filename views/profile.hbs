<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/profile.css">
  <script src="https://kit.fontawesome.com/ab56d9cd66.js" crossorigin="anonymous"></script>
</head>

<body>
  <header class="navbar">
    <nav>
      <a href="/dashboard" class="btn btn-outline-light">Dashboard</a>
      <a href="/Transaction" class="btn btn-outline-light">Transactions</a>
      {{#if username}}
      <a href="/logout" id="logout" class="btn btn-danger">Logout</a>
      {{else}}
      <a href="/login" class="btn btn-warning">Login</a>
      {{/if}}
    </nav>
    <div class="user-info">
      {{#if username}}
      <div class="d-flex align-items-center">
        <img src="{{profilePicture}}" alt="Profile Picture" class="rounded-circle" width="50" height="50">
        <span class="ms-3 text-light">{{username}}</span>
      </div>
      {{/if}}
    </div>
  </header>

  <main class="profile-container">
    <!-- Profile Section -->
    <div class="profile-box">
      <div class="profile-header">
        <div class="profile-image-container">
          <img src="{{profilePicture}}" alt="Profile Picture">
        </div>
        <h1 class="text-light">{{username}}</h1>
      </div>
      <div class="profile-details">
        <p><strong>Email:</strong> <span>{{email}}</span></p>
        <p><strong>Phone:</strong> <span>{{phoneNumber}}</span></p>
        <p><strong>Gender:</strong> <span>{{gender}}</span></p>
        <p><strong>Address:</strong> <span>{{address}}</span></p>
        <p><strong>Date of Birth:</strong> <span>{{DOB}}</span></p>
      </div>
    </div>

    <!-- Bank Section -->
    <div class="bank-info-box">
      <h2 class="text-light">Bank Information</h2>
      <div class="bank-info-details">
        <p><strong></strong> <span class="badge bg-success"
            style="background-color: rgba(40, 167, 69, 0.7);">{{accountStatus}}</span></p>

        <p><strong>Account Number:</strong> <span>{{accountNo}}</span></p>
        <p><strong>IFSC Code:</strong> <span>{{ifscCode}}</span></p>
        <p><strong>Balance:</strong> ₹<span>{{finalBalance}}</span></p>
        <p><strong>Branch Name:</strong> <span>{{branchName}}</span></p>
        <p><strong>Initial Deposit:</strong> ₹<span>{{initialDeposit}}</span></p>
      </div>
    </div>
  </main>

  <footer>
    <p>&copy; 2024 Banking System. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>